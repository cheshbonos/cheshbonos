   },
   {
    "type": "italics",
    "tokens": [
     {
      "text": "shaliach",
      "type": "text"
     }
    ]
   },
   {
    "text": " and other questions regarding ",
    "type": "text"
   },
   {
    "type": "italics",
    "tokens": [
     {
      "text": "shlichus",
      "type": "text"
     }
    ]
