        "type": "local",
        "tokens": [
         {
          "text": "used to produce the present tense",
          "type": "text"
         }
        ],
        "targetSubtopic": "Used to produce the present tense",
        "targetTopic": "Participle constructions",
        "enclosingTopic": "Participle constructions",
        "enclosingSubtopic": "Participle constructions"
       },
